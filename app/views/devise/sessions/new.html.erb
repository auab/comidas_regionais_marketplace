<div class='my-3'>
  <h2>Entrar</h2>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label:  "E-mail",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label:  "Senha",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me,label:  "Lembrar-me?", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-gradient' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
